{
  "name": "smooth-scroll",
  "description": "Smooth scroll of text-editor by mouse & keybord",
  "repository": "https://github.com/asiloisad/pulsar-smooth-scroll",
  "keywords": [
    "smooth",
    "scroll",
    "mouse",
    "keyboard"
  ],
  "version": "1.8.1",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "main": "./lib/main",
  "configSchema": {
    "wheelDir": {
      "order": 1,
      "title": "Mouse wheel scroll direction",
      "type": "integer",
      "enum": [
        {
          "value": 1,
          "description": "Normal"
        },
        {
          "value": -1,
          "description": "Reverse"
        }
      ],
      "default": 1
    },
    "ctrlMode": {
      "order": 2,
      "title": "State of target modifier",
      "description": "Use `Ctrl` to scroll all visible text editors",
      "type": "boolean",
      "default": true
    },
    "altMode": {
      "order": 3,
      "title": "State of speed modifier",
      "description": "Use `Alt` to use alternative speed setting",
      "type": "boolean",
      "default": true
    },
    "shiftMode": {
      "order": 4,
      "title": "State of direction modifier",
      "description": "Use `Shift` to change scroll to horizontal direction",
      "type": "boolean",
      "default": true
    },
    "wheelDiv": {
      "order": 5,
      "title": "Mouse wheel smooth divider",
      "type": "number",
      "minimum": 1,
      "maximum": 20,
      "default": 8
    },
    "wheelPos": {
      "order": 6,
      "title": "Mouse wheel step factor",
      "type": "number",
      "minimum": 0.1,
      "maximum": 10,
      "default": 1
    },
    "wheelAlt": {
      "order": 7,
      "title": "Mouse wheel alternative step factor",
      "type": "number",
      "minimum": 0.1,
      "maximum": 10,
      "default": 5
    },
    "scrollDiv": {
      "order": 8,
      "title": "Scroll command smooth divider",
      "type": "number",
      "minimum": 1,
      "maximum": 50,
      "default": 20
    },
    "scrollPos": {
      "order": 9,
      "title": "Scroll command step factor",
      "type": "number",
      "minimum": 0.03125,
      "maximum": 32,
      "default": 1
    }
  }
}
